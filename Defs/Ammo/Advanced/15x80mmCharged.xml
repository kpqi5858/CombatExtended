<Defs>

    <ThingCategoryDef>
      <defName>Ammo15x80mmCharged</defName>
      <label>15x80mm Charged</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberChargeLarge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_15x80mmCharged</defName>
    <label>15x80mm Charged</label>
    <ammoTypes>
      <Ammo_15x80mmCharged>Bullet_15x80mmCharged</Ammo_15x80mmCharged>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="15x80mmChargedBase" ParentName="SpacerSmallAmmoBase" Abstract="True">
    <description>High-caliber uranium-charged shot ammo used in heavy weapons.</description>
    <statBases>
	  <Mass>0.12</Mass>
	  <Bulk>0.17</Bulk>
    </statBases>
    <thingCategories>
      <li>Ammo15x80mmCharged</li>
    </thingCategories>
    <stackLimit>200</stackLimit>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="15x80mmChargedBase">
    <defName>Ammo_15x80mmCharged</defName>
    <label>15x80mm Charged cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Large</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>6.00</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseBullet">
    <defName>Bullet_15x80mmCharged</defName>
    <label>uranium slug</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <damageAmountBase>45</damageAmountBase>
      <speed>250</speed>
      <secondaryDamage>
        <li>
          <def>Bomb_Secondary</def>
          <amount>15</amount>
        </li>
      </secondaryDamage>
      <armorPenetration>1.8</armorPenetration>
    </projectile>
  </ThingDef>
  
