<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="Filth_Fuel"]/thingClass</xpath>
		<value>
			<thingClass>CombatExtended.IncendiaryFuel</thingClass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="Filth_Fuel"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>75</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="Filth_Fuel"]/statBases/Flammability</xpath>
		<value>
			<Flammability>5</Flammability>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>*/ThingDef[defName="Filth_Fuel"]/filth/rainWashes</xpath>
	</Operation>

</Patch>

